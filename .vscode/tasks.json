{
    "tasks": [
        {
            "label": "Build C/C++ Project",
            "type": "cpp",
            "sources": [
              "${fileDirname}/**/*.cc"
            ],
            "output": "${workspaceFolder}/debug/${fileBasenameNoExtension}.exe",
            "options": {
              "cwd": "${fileDirname}"
            },
            "group": "build"
          }, 
          {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}